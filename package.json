{
  "name": "task-board",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@hello-pangea/dnd": "^15.0.0",
    "@mui/material": "^5.10.2",
    "@reduxjs/toolkit": "^1.8.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "axios": "^0.27.2",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-animate-height": "^3.0.4",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.3.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "redux-thunk": "^2.4.1",
    "sass": "^1.54.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1"
  },
  "scripts": {
    "dev": "concurrently \"npm start\" \"npm run dev --prefix ../task-board-backend/\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "prettier": {
    "tabWidth": 4,
    "arrowParens": "avoid",
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "overrides": [
      {
        "files": [
          "*.css",
          "*.scss"
        ],
        "options": {
          "singleQuote": false,
          "tabWidth": 2
        }
      }
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
